error-input($color = #e36d56)
	//cria um elemento de validação com placeholder e borda de ca cor definida na variável. - @ghaschel
	border 1px solid $color !important
	color $color
	&::-webkit-input-placeholder
		color $color
	&::-moz-placeholder 
		color $color
	&:-moz-placeholder 
		color $color
	&:-ms-input-placeholder 
		color $color
error = error-input
err = error-input

placeholder($color = #eeeeee)
	//Muda a cor do placeholder - @ghaschel
	&::-webkit-input-placeholder
		color $color
	&::-moz-placeholder 
		color $color
	&:-moz-placeholder 
		color $color
	&:-ms-input-placeholder 
		color $color
ph = placeholder

placeholder-important($color = #eeeeee)
	//Muda a cor do placeholder fazendo override de um anterior - @ghaschel
	&::-webkit-input-placeholder
		color $color !important
	&::-moz-placeholder 
		color $color !important
	&:-moz-placeholder 
		color $color !important
	&:-ms-input-placeholder 
		color $color !important
phi = placeholder-important

.fix-input
	//remove o placeholder quando o input está em foco, e remove a sombra vermelha de input invalido do firefox
	&:focus
		&::-webkit-input-placeholder
			color transparent
	&:invalid 
		-webkit-box-shadow none
		-moz-box-shadow none
		box-shadow none

