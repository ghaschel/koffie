error-input($color = #e36d56)
	// Author: @ghaschel
	// Ref:
	// Description [en]: Changes the placeholder color, border color, and outline color.
	// Description [pt-br]: Muda a cor do placeholder, borda, e outline.
	// Description [nl]: *soon*
	border 1px solid $color !important
	color $color
	outline-color $color
	&::-webkit-input-placeholder
		color $color
	&::-moz-placeholder 
		color $color
	&:-moz-placeholder 
		color $color
	&:-ms-input-placeholder 
		color $color
	&:focus
		outline-color $color
error = error-input
err = error-input

placeholder($color = #eeeeee)
	// Author: @ghaschel
	// Ref:
	// Description [en]: Changes the placeholder color.
	// Description [pt-br]: Muda a cor do placeholder.
	// Description [nl]: *soon*
	&::-webkit-input-placeholder
		color $color
	&::-moz-placeholder 
		color $color
	&:-moz-placeholder 
		color $color
	&:-ms-input-placeholder 
		color $color
ph = placeholder

placeholder-important($color = #eeeeee)
	// Author: @ghaschel
	// Ref:
	// Description [en]: Changes the placeholder color using "!important".
	// Description [pt-br]: Muda a cor do placeholder usando "!important".
	// Description [nl]: *soon*
	&::-webkit-input-placeholder
		color $color !important
	&::-moz-placeholder 
		color $color !important
	&:-moz-placeholder 
		color $color !important
	&:-ms-input-placeholder 
		color $color !important
phi = placeholder-important

.fix-input
	// Author: @ghaschel
	// Ref:
	// Description [en]: Removes the placeholder while the input is focused and empty. Also removes the 'invalid' input state's red box shadow from Firefox.
	// Description [pt-br]: Remove o placeholder enquanto o input está em foco e vazio. Também remove o box shadow vermelho de inputs com estado 'invalid'.
	// Description [nl]: *soon*
	&:focus
		&::-webkit-input-placeholder
			color transparent
	&:invalid 
		-webkit-box-shadow none
		-moz-box-shadow none
		box-shadow none

$antialiasing,
$anti-aliasing,
$font-smoothing
	// Author: Maximilian Hoffmann & drinchev
	// Ref: http://stackoverflow.com/questions/11459746/css3-webfont-smoothing-and-antialiasing-in-firefox-and-opera [font anti aliasing - Maximilian]
