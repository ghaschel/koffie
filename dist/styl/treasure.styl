scroll-bar($size = 6px, $background1 = transparent, $background2 = #ccc, $radius = 5px)
	// Author: Drew Noakes
	// Ref: http://stackoverflow.com/questions/7725652/css-scrollbar-style-cross-browser
	// Description [en]: Changes the scrollbar's default style [webkit/bink].
	// Description [pt-br]: Altera o estilo padrão da scrollbar [webkit/bink].
	// Description [nl]: *soon*
	// TODO: [Improve] - http://css-tricks.com/custom-scrollbars-in-webkit/
	// Search: Improve for IE
	&::-webkit-scrollbar
		width $size 
		height $size
	&::-webkit-scrollbar-track
		background $background1
	&::-webkit-scrollbar-thumb
		background $background2
		-webkit-border-radius $radius
		border-radius $radius

border-radius($radius = 5px)
	// Author: @ghaschel
	// Ref: http://css3pie.com
	// Description [en]: Cross Browser border-radius.
	// Description [pt-br]: border-radius Cross Browser.
	// Description [nl]: *soon*
	-webkit-border-radius $radius
	-khtml-border-radius $radius
	-icab-border-radius $radius
	-moz-border-radius $radius
	border-radius $radius
	if $ie6 || $ie7 || $ie8
		behavior url('htc/pie.htc')
		-ms-behavior url('htc/pie.htc')
bradius = border-radius

