opacity($opacity = 0.5)
	// Author: @ghaschel
	// Ref:
	// Description [en]: Cross Browser opacity function.
	// Description [pt-br]: Função de opacidade Cross Browser.
	// Description [nl]: *soon*
	-webkit-opacity $opacity
	-khtml-opacity $opacity
