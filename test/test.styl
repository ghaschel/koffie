@require "../src/styl/koffie.styl";

html
  scroll-bar(6px, #ddd, #ccc, 5px)
  body
    scroll-bar()
    &.noscrollstyle
      disable-scroll-styling()
  .circle
    border-radius(25px)
    bradius(25px)
  .circler
    border-radius(50%)
    bradius(50%)
  .padding-test
    padding-x(3px)
    paddingx(3px)
    padding-y(3px)
    paddingy(3px)
  .margin-test
    margin-x(3px)
    marginx(3px)
    margin-y(3px)
    marginy(3px)
  .opc
    opacity(50%)
    opc(50%)
  .outline
    nout()
  .tt
    &:before
      top-triangle()
    &:after
      top-triangle(15px, #fff)
  .bt
    &:before
      bottom-triangle()
    &:after
      bottom-triangle(15px, #fff)
  .rt
    &:before
      right-triangle()
    &:after
      right-triangle(15px, #fff)
  .lt
    &:before
      left-triangle()
    &:after
      left-triangle(15px, #fff)
  span
    &:nth-child(1)
      text-border(red, 1px, yellow, 1px, green, 1px, purple, 1px)
    &:nth-child(2)
      text-border()
    &:nth-child(3)
      @extend $font-smoothing
    &:nth-child(4)
      @extend $anti-aliasing
    &:nth-child(5)
      @extend $antialiasing
    &:nth-child(6)
      @extend $no-user-select
    &:nth-child(7)
      @extend $nousel
    &:nth-child(8)
      user-select(yellow, red)
    &:nth-child(9)
      user-select()
    &:nth-child(10)
      &:before
        @extend $fix-flickering
      &:after
        @extend $fixfl
    &:nth-child(11)
      animated(0.3s, ease-in-out, all)
    &:nth-child(12)
      animated()
    &:nth-child(13)
      @extend $no-speak
    &:nth-child(14)
      @extend $nospeak
    &:nth-child(15)
      usel(yellow, red)
    &:nth-child(16)
      usel()
  p
    @extend $hyphen
  div
    &:nth-child(1)
      @extend $hw-accelerated
    &:nth-child(2)
      @extend $hwacc
  select
    fixsel()
  input[type=text]
    &:nth-child(1)
      error-input(#666)
    &:nth-child(2)
      error-input()
    &:nth-child(3)
      placeholder(#333)
    &:nth-child(4)
      placeholder()
    &:nth-child(7)
      fix-input()
